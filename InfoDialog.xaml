<Window x:Class="Counter_Wpf.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Counter_Wpf"
        mc:Ignorable="d"
        Title="InfoDialog" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Enter some text" />
            <TextBox x:Name="ResponseTextBox" />
            <Button Content="OK" Click="OKButton_Click" />
            <ContentControl Content="ContentControl" HorizontalAlignment="Left" Height="200" Margin="193,0,0,0" Width="329"/>
        </StackPanel>
    </Grid>
</Window>
